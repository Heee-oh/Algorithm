SELECT 
    mp.member_name,
    rr.review_text,
    DATE_FORMAT(rr.review_date, '%Y-%m-%d') AS review_date
FROM rest_review rr
JOIN member_profile mp ON mp.member_id = rr.member_id
WHERE rr.member_id IN (
    SELECT member_id
    FROM (
        SELECT member_id,
               COUNT(*) AS ct,
               RANK() OVER (ORDER BY COUNT(*) DESC) AS rnk
        FROM rest_review
        GROUP BY member_id
    ) x
    WHERE rnk = 1
)
ORDER BY review_date asc, review_text